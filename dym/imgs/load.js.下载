function loads(){times=0;var b="http://soft.zol.com.cn/dynamic/soft_article_list.php",e=document.getElementById("container"),c=false,f=$(".loading");function a(){f.css("display","block");$.ajax({type:"GET",url:b,data:{"times":times,"sid":window.sid},dataType:"html",success:function(h){try{if(h&&times<1){times=times+1;$(e).append(h);c=false}else{c=true;return false}f.css("display","none")}catch(g){f.css("display","none");c=true}initBdShare()},error:function(){c=true;f.css("display","none");return false}})}$(window).bind("scroll",function(){var g=e.getBoundingClientRect().bottom;if(g<1000&&times<1&&!c){c=true;a()}});var d=1;$(".load-more").click(function(){var g="http://soft.zol.com.cn/dynamic/soft_article_list.php",i=document.getElementById("container"),h=false,j=$(".loading");j.css("display","block");$.ajax({type:"GET",url:g,data:{"times":d,"sid":window.sid},dataType:"html",success:function(l){try{if(l&&d<=5){d=d+1;$(i).append(l);if(d==5){$(".load-more").css("display","none");$(".loading").css("display","none");return}h=false}else{h=true;return false}j.css("display","none");initBdShare()}catch(k){j.css("display","none");h=true}},error:function(){h=true;j.css("display","none");return false}})})};